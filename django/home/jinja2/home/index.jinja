                    <button class="btn btn-primary w-100">Explore</button>
                </div>
            </div>
            <!-- Journals -->
            <div class="col-md-6 mt-3">
                <div class="resource-box text-center">
                    <h3>Journals</h3>
                    <p class="resource-desc">Find academic papers and research publications.</p>
                    <button class="btn btn-primary w-100">Explore</button>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-primary w-75">More Resources</button>
